---
import { HOMEPAGE_URL } from '../config'
import DynamicCounter from './DynamicCounter'
import DynamicSkillIcons from './DynamicSkillIcons'
import React from 'react'

const today = new Date()
const mySkills = 'java,spring,mysql,c,cpp,cmake,idea,clion,apple'
const mySkills2 = 'vue,react,typescript,tailwindcss,astro,nodejs,vite,vscode,webstorm'
---

<footer class='text-zinc-500 text-center'>
  <div class='flex flex-col items-center'>

    <DynamicCounter client:load />

    <div class='flex flex-col items-center gap-2 mt-4'>
      <div class='flex justify-center items-center px-4'>
        <DynamicSkillIcons skills={mySkills} client:load />
      </div>
      <div class='flex justify-center items-center px-4'>
        <DynamicSkillIcons skills={mySkills2} client:load />
      </div>
    </div>

    <div class='text-sm mt-3'>
      &copy; 2024 - {today.getFullYear()}
      <a
        href={HOMEPAGE_URL}
        class='text-zinc-400 hover:text-zinc-300 transition-colors duration-200'
      >
        AhogeK
      </a>
      . 保留所有权利.
    </div>
  </div>
</footer>

<style>
  footer {
    padding: 2rem 1rem;
  }

  @media (max-width: 640px) {
    footer {
      padding: 1.5rem 1rem;
    }
  }
</style>