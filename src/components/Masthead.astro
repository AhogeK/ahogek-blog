---
import Video from './Video'
import AnimeTitle from './AnimeTitle'

const { type } = Astro.props
const shouldShow404Masthead = Boolean(type === '404')
---
<section class='relative mb-6 min-h-screen flex justify-center items-center'>
  <Video client:load />

  <div class='z-10 text-center px-8 drop-shadow-lg shadow-black'>
    {shouldShow404Masthead ?
      <AnimeTitle client:load />
      :
      <div class='flex flex-col items-center'>
        <!-- 头像部分 - 带旋转光环 -->
        <div class='mb-6 relative'>
          <!-- 旋转光环背景 -->
          <div class='absolute inset-0 w-28 h-28 -translate-x-2 -translate-y-2'>
            <div
              class='w-full h-full rounded-full bg-gradient-to-r from-orange-400 via-rose-500 to-purple-600 animate-spin opacity-30'
              style='animation-duration: 3s;'></div>
          </div>

          <!-- 头像 -->
          <img
            src='/avatar.jpg'
            alt='AhogeK 头像'
            class='relative w-24 h-24 rounded-full border-2 border-white/50 shadow-2xl hover:scale-110 transition-all duration-500 hover:border-orange-400'
          />

          <!-- 脉冲效果 -->
          <div
            class='absolute inset-0 w-24 h-24 rounded-full bg-gradient-to-r from-orange-400 to-rose-500 opacity-0 hover:opacity-20 transition-opacity duration-300'></div>
        </div>

        <!-- 欢迎文字 -->
        <div class='uppercase text-sm mb-4 tracking-wider'>Welcome to</div>
        <div class='text-4xl font-mplus font'>
          AhogeK 的 <span
          class='bg-clip-text text-transparent bg-gradient-to-r from-orange-400 to-rose-500'> 个人博客</span>
        </div>
      </div>
    }
  </div>

  <!-- 滚动指示器 -->
  {!shouldShow404Masthead &&
    <div class='absolute bottom-10 left-0 right-0 flex justify-center animate-bounce'>
      <button class='text-white' aria-label='滚动查看更多'>
        <svg xmlns='http://www.w3.org/2000/svg' class='h-6 w-6' viewBox='0 0 24 24' stroke='currentColor'>
          <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M19 14l-7 7m0 0l-7-7m7 7V3' />
        </svg>
      </button>
    </div>
  }
</section>